        {-5,-6}
        };
        int maxNumber=0;
        for(int i=0;i<array.length;i++){
        int[]innerArray=array[i];
        for(int j=0;j<innerArray.length;j++){
        if(maxNumber<innerArray[j]){
        maxNumber=innerArray[j];
        }
        }
        }
        System.out.println(maxNumber);

